<% if @order.errors.any? %>
  <section class="alert alert-danger">
    <h1>This needs reviewing:</h1>
    <ul>
      <% @order.errors.each do |column, message| %>
        <li>
          <strong><%= column.capitalize %></strong> <%= message %>
        </li>
      <% end %>
    </ul>
  </section>
<% end %>

<section class="checkoutpage">
  <p>Please provide the following information to complete your order. Please don't give us your real credit card--this is a student project and our data security is less than upper-crust. </p>
<%= form_with model: @order, url: order_path(@order), method: :patch do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Sleepy Sammy"  %>
  </div>

  <div class="form-group">
    <%= f.label :email, "Email Address" %>
    <%= f.text_field :email, class: "form-control", placeholder: "catchinwsnzs@gmail.com"  %>
  </div>

  <div class="form-group">
    <%= f.label :address, "Shipping Address" %>
    <%= f.text_field :address, class: "form-control", placeholder: "1234 Sleepytown"  %>
  </div>

  <div class="form-group">
    <%= f.label :credit_card_number, "Card Number" %>
    <%= f.number_field :credit_card_number, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :expiration_date, "Expiration Date" %>
    <%= f.text_field :expiration_date, class: "form-control", placeholder: "11/23"  %>
  </div>

  <div class="form-group">
    <%= f.label :cvv, "Security Code" %>
    <%= f.number_field :cvv, class: "form-control", placeholder: "321" %>
  </div>

  <div class="form-group">
    <%= f.label :zip_code, "Zip Code" %>
    <%= f.number_field :zip_code, class: "form-control", placeholder: "232384" %>
  </div>

  <div class="form-group">
    <%= f.submit "Complete Order", class: "task-button" %>
  </div>

<% end %>

</section>